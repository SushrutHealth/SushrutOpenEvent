<!--
    Simple list layout with swipe to be used with MyListActivity
    http://www.bignerdranch.com/blog/implementing-swipe-to-refresh/
-->
<org.andstatus.app.widget.MySwipeRefreshLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myLayoutParent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".origin.OriginList" >

    <fragment
        android:id="@+id/myListParent"
        android:name="android.support.v4.app.ListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        />
</org.andstatus.app.widget.MySwipeRefreshLayout>