<?xml version="1.0" encoding="utf-8"?>
<!-- One item in the accountlist
This examples helped me here: 
  http://stackoverflow.com/questions/6233665/how-to-list-view-whole-row-selectable-in-android
  http://stackoverflow.com/questions/8796620/setting-a-minimum-height-and-layout-weight-on-edit-text-android  
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:minHeight="50dip"
		android:orientation="horizontal">

	<TextView
	    android:id="@+id/visible_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="5dip" />
    <TextView
        android:id="@+id/credentials_verified"
        android:layout_width="20dip"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/sync_auto"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip" 
        android:layout_marginRight="5dip"/>
    <TextView
        android:id="@+id/sync_auto"
        android:layout_width="20dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip" 
        android:layout_marginRight="5dip"/>
    	
    <TextView android:id="@+id/id"
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:visibility="gone" />
	
	<TextView android:id="@+id/type"
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:visibility="gone" />
</RelativeLayout>
