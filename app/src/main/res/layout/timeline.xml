<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	tools:context=".msg.TimelineActivity">
	<org.andstatus.app.widget.MySwipeRefreshLayout
	    android:id="@+id/myLayoutParent"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	
	    <RelativeLayout
		    android:id="@+id/myRelativeLayoutParent"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical" >

            <fragment
                android:id="@+id/myListParent"
                android:name="org.andstatus.app.msg.TimelineFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
				tools:layout="@layout/my_list_fragment"/>

		    <!-- On setting background see:
		     http://stackoverflow.com/questions/11914547/setting-a-view-background-based-on-theme-attribute-crash-the-app -->

		    <LinearLayout
		        android:id="@+id/sync_indicator"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentBottom="true"
		        android:background="?android:attr/colorBackground"
		        android:orientation="vertical"
		        android:paddingBottom="5dip"
		        android:paddingLeft="5dip"
		        android:paddingRight="5dip"
		        android:paddingTop="5dip"
		        android:visibility="visible" >
		
				<View style="@style/Divider"/>

			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:paddingTop="5dip" >
										        		        
			        <ProgressBar
			            android:layout_width="18dip"
			            android:layout_height="18dip"
			            android:layout_marginRight="6dip" />
			
			        <TextView
			            android:id="@+id/sync_text"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="@string/syncing"
			            style="@style/messageBodyAppearance" />
		        </LinearLayout>
		    </LinearLayout>
			<include layout="@layout/message_editor" />
	    </RelativeLayout>
		</org.andstatus.app.widget.MySwipeRefreshLayout>    
    <include layout="@layout/navigation_drawer" />
</android.support.v4.widget.DrawerLayout>