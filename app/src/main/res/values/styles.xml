    <string-array name="theme_size_values">
        <item>Small</item>
        <item>StandardSize</item>
        <item>Large</item>
    </string-array>
    <style name="AndStatusBaseAttributes">
        <item name="messageUsernameColor">?android:attr/textColorSecondary</item>
        <item name="messageBodyColor">?android:attr/textColorPrimary</item>
        <item name="messageDetailsColor">?android:attr/textColorTertiary</item>
        <item name="sectionHeaderStyle">@style/sectionHeader</item>
    </style>
    <style name="StandardSize" parent="@style/AndStatusBaseAttributes">
        <item name="messageUsernameTextAppearance">?android:attr/textAppearanceSmall</item>
        <item name="messageBodyTextAppearance">?android:attr/textAppearanceMedium</item>
        <item name="messageDetailsTextAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <style name="Small" parent="@style/AndStatusBaseAttributes">
        <item name="messageUsernameTextAppearance">?android:attr/textAppearanceSmall</item>
        <item name="messageBodyTextAppearance">?android:attr/textAppearanceSmall</item>
        <item name="messageDetailsTextAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <style name="Large" parent="@style/AndStatusBaseAttributes">
        <item name="messageUsernameTextAppearance">?android:attr/textAppearanceMedium</item>
        <item name="messageBodyTextAppearance">?android:attr/textAppearanceLarge</item>
        <item name="messageDetailsTextAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <string-array name="background_color_values">
        <item>BackgroundColorBlack</item>
        <item>BackgroundColorNight</item>
        <item>BackgroundColorMidnight</item>
        <item>BackgroundColorCharcoal</item>
        <item>BackgroundColorBlackCat</item>
        <item>BackgroundColorGreyWolf</item>
        <item>BackgroundColorCarbonGrey</item>
    </string-array>
    <style name="BackgroundColorBlack">
        <item name="myBackgroundColor">@color/black</item>
    </style>
    <style name="BackgroundColorNight">
        <item name="myBackgroundColor">@color/night</item>
    </style>
    <style name="BackgroundColorMidnight">
        <item name="myBackgroundColor">@color/midnight</item>
    </style>
    <style name="BackgroundColorCharcoal">
        <item name="myBackgroundColor">@color/charcoal</item>
    </style>
    <style name="BackgroundColorBlackCat">
        <item name="myBackgroundColor">@color/black_cat</item>
    </style>
    <style name="BackgroundColorGreyWolf">
        <item name="myBackgroundColor">@color/grey_wolf</item>
    </style>
    <style name="BackgroundColorCarbonGrey">
        <item name="myBackgroundColor">@color/carbon_grey</item>
    </style>

    <style name="WidgetStyle">
         <item name="android:background">@drawable/widget_bg</item>
    </style>
    <style name="EmptyStyle">
         <item name="android:background">#00000000</item>
    </style>
	
	<!-- http://stackoverflow.com/questions/10020466/android-4-0-sub-title-section-label-styling -->
	<style name="sectionHeader" parent="android:Widget.Holo.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
	    <item name="android:drawableBottom">@drawable/drawer_section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/messageDetailsColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
	<style name="sectionHeaderLight" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
	    <item name="android:drawableBottom">@drawable/drawer_section_header_light</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/messageDetailsColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    
	<style name="drawerListItem">
	    <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
	    <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">start</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	</style>

	<!-- http://stackoverflow.com/questions/5049852/android-drawing-separator-divider-line-in-layout -->
	<style name="Divider">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">1dp</item>
	    <item name="android:background">?attr/dividerColor</item>
	</style>

    <style name="messageUsernameAppearance" parent="android:Widget.TextView">
        <item name="android:textAppearance">?attr/messageUsernameTextAppearance</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/messageUsernameColor</item>
    </style>
    <style name="messageBodyAppearance" parent="android:Widget.TextView">
        <item name="android:textAppearance">?attr/messageBodyTextAppearance</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/messageBodyColor</item>
        <item name="android:textColorLink">?attr/textColorLink</item>
    </style>
    <style name="messageDetailsAppearance" parent="android:Widget.TextView">
        <item name="android:textAppearance">?attr/messageDetailsTextAppearance</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/messageDetailsColor</item>
    </style>
</resources>
