<resources>
    <string-array name="theme_color_values">
        <item>Dark</item>
        <item>Light</item>
        <item>DeviceDefault</item>
    </string-array>

    <style name="Theme.AndStatus.Base" parent="Theme.AppCompat">
        <item name="textColorLink">@color/link_text_light</item>
        <item name="dividerColor">@android:color/darker_gray</item>

        <item name="attachIcon">@drawable/ic_action_new_attachment</item>
        <item name="globalSearchIcon">@drawable/ic_action_global_search</item>
        <item name="helpIcon">@drawable/ic_action_help</item>
        <item name="hideMessageIcon">@drawable/ic_action_hide_message</item>
        <item name="mySearchIcon">@drawable/ic_action_search</item>
        <item name="newIcon">@drawable/ic_action_new</item>
        <item name="postMessageIcon">@drawable/ic_action_new_message</item>
        <item name="reloadIcon">@drawable/ic_action_refresh</item>
        <item name="replyBackground">@drawable/reply_timeline_background</item>
        <item name="sendIcon">@drawable/ic_action_send_now</item>
    </style>
    <style name="Theme.AndStatus.DeviceDefault" parent="Theme.AndStatus.Base"/>
    <style name="Theme.AndStatus.Dark" parent="Theme.AndStatus.Base">
        <item name="colorPrimary">?actionBarColor</item>
        <item name="colorPrimaryDark">?actionBarColorDark</item>
        <item name="android:colorBackground">?myBackgroundColor</item>
    </style>

	<style name="Theme.AndStatus.Light" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">?actionBarColor</item>
        <item name="colorPrimaryDark">?actionBarColorDark</item>
        <item name="dividerColor">@android:color/black</item>

        <item name="textColorLink">@color/link_text_dark</item>

        <item name="attachIcon">@drawable/ic_action_new_attachment_light</item>
        <item name="globalSearchIcon">@drawable/ic_action_global_search_light</item>
        <item name="helpIcon">@drawable/ic_action_help_light</item>
        <item name="hideMessageIcon">@drawable/ic_action_hide_message_light</item>
        <item name="mySearchIcon">@drawable/ic_action_search_light</item>
        <item name="newIcon">@drawable/ic_action_new_light</item>
        <item name="postMessageIcon">@drawable/ic_action_new_message_light</item>
        <item name="reloadIcon">@drawable/ic_action_refresh_light</item>
        <item name="replyBackground">@drawable/reply_timeline_background_light</item>
        <item name="sendIcon">@drawable/ic_action_send_now_light</item>
    </style>

    <!-- The theme has all attributes included and should be used in preview for Android tools -->
    <style name="Theme.AndStatus.FullyDefined" parent="Theme.AndStatus.Base">
        <item name="messageUsernameTextAppearance">?android:attr/textAppearanceSmall</item>
        <item name="messageUsernameColor">?android:attr/textColorSecondary</item>

        <item name="messageBodyTextAppearance">?android:attr/textAppearanceMedium</item>
        <item name="messageBodyColor">?android:attr/textColorPrimaryNoDisable</item>

        <item name="messageDetailsTextAppearance">?android:attr/textAppearanceSmall</item>
        <item name="messageDetailsColor">?android:attr/textColorTertiary</item>

        <item name="sectionHeaderStyle">@style/sectionHeader</item>
    </style>

</resources>